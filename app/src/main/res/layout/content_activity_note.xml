<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activityNoteContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="SpeakableTextPresentCheck">

            <ImageView
                android:id="@+id/noteBackgroundImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                tools:src="@drawable/image_night_city" />

        </ScrollView>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/actionMenuParentLayout"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:theme="@style/AppBarOverlay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/noteToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize" />

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@id/actionMenuParentLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.pandacorp.notesui.utils.CustomEditText
                        android:id="@+id/headerEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/header"
                        android:inputType="text"
                        android:maxLines="12"
                        android:minHeight="48dp"
                        android:textColorHint="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.pandacorp.notesui.utils.CustomEditText
                        android:id="@+id/contentEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="top|start"
                        android:hint="@string/content"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:scrollbars="vertical"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/headerEditText"
                        tools:text="@string/lorem_ipsumX3" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


        <LinearLayout
            android:id="@+id/actionMenuParentLayout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/linear_layout_rounded_background"
            android:backgroundTint="?android:colorPrimary"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/actionMenuButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="visible">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="SpeakableTextPresentCheck">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/actionMenuButtonBold"
                            android:layout_width="@dimen/actionMenuButtonsSize"
                            android:layout_height="@dimen/actionMenuButtonsSize"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/ic_note_bold"
                            android:stateListAnimator="@animator/increase_size_touch_animator" />

                        <ImageView
                            android:id="@+id/actionMenuButtonItalic"
                            android:layout_width="@dimen/actionMenuButtonsSize"
                            android:layout_height="@dimen/actionMenuButtonsSize"
                            android:layout_marginEnd="25dp"
                            android:src="@drawable/ic_note_italic"
                            android:stateListAnimator="@animator/increase_size_touch_animator" />

                        <ImageView
                            android:id="@+id/actionMenuButtonChangeTextForegroundColor"
                            android:layout_width="@dimen/actionMenuButtonsSize"
                            android:layout_height="@dimen/actionMenuButtonsSize"
                            android:layout_marginEnd="25dp"
                            android:src="@drawable/ic_note_change_text_foreground"
                            android:stateListAnimator="@animator/increase_size_touch_animator" />

                        <ImageView
                            android:id="@+id/actionMenuButtonChangeTextGravity"
                            android:layout_width="@dimen/actionMenuButtonsSize"
                            android:layout_height="@dimen/actionMenuButtonsSize"
                            android:layout_marginEnd="25dp"
                            android:src="@drawable/ic_note_change_text_gravity"
                            android:stateListAnimator="@animator/increase_size_touch_animator" />

                        <ImageView
                            android:id="@+id/actionMenuButtonChangeTextBackgroundColor"
                            android:layout_width="@dimen/actionMenuButtonsSize"
                            android:layout_height="@dimen/actionMenuButtonsSize"
                            android:layout_marginEnd="25dp"
                            android:src="@drawable/ic_note_change_text_background"
                            android:stateListAnimator="@animator/increase_size_touch_animator" />

                        <ImageView
                            android:id="@+id/actionMenuButtonAddImage"
                            android:layout_width="@dimen/actionMenuButtonsSize"
                            android:layout_height="@dimen/actionMenuButtonsSize"
                            android:src="@drawable/ic_note_add_image"
                            android:stateListAnimator="@animator/increase_size_touch_animator" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/actionMenuColorsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="gone">

                <ImageView
                    android:id="@+id/actionMenuColorsRemoveImageView"
                    android:layout_width="@dimen/actionMenuButtonsSize"
                    android:layout_height="@dimen/actionMenuButtonsSize"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_note_action_remove"
                    android:stateListAnimator="@animator/increase_size_touch_animator" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/actionMenuColorsRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/color_item"/>

                <ImageButton
                    android:id="@+id/noteActionColorsCloseImageButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@android:color/transparent"
                    android:stateListAnimator="@animator/increase_size_touch_animator"
                    android:src="@drawable/ic_baseline_close_24" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/actionMenuGravityLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="gone">

                <ImageView
                    android:id="@+id/actionMenuGravityLeftImageView"
                    android:layout_width="@dimen/actionMenuButtonsSize"
                    android:layout_height="@dimen/actionMenuButtonsSize"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_note_change_text_gravity_left"
                    android:stateListAnimator="@animator/increase_size_touch_animator" />

                <ImageView
                    android:id="@+id/actionMenuGravityCenterImageView"
                    android:layout_width="@dimen/actionMenuButtonsSize"
                    android:layout_height="@dimen/actionMenuButtonsSize"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/ic_note_change_text_gravity_center"
                    android:stateListAnimator="@animator/increase_size_touch_animator" />

                <ImageView
                    android:id="@+id/actionMenuGravityRightImageView"
                    android:layout_width="@dimen/actionMenuButtonsSize"
                    android:layout_height="@dimen/actionMenuButtonsSize"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/ic_note_change_text_gravity_right"
                    android:stateListAnimator="@animator/increase_size_touch_animator" />

                <ImageView
                    android:id="@+id/actionMenuGravityCloseImageView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/ic_baseline_close_24"
                    android:stateListAnimator="@animator/increase_size_touch_animator" />

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>