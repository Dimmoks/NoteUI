<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="materialButtonStyle">@style/MaterialButton</item>
        <item name="editTextStyle">@style/EditText</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="alertDialogTheme">@style/MaterialAlertDialog</item>
        <item name="drawerArrowStyle">@style/DrawerArrowToggle</item>
        <item name="snackbarStyle">@style/SnackBarStyle</item>
        <item name="switchStyle">@style/Switch</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
    </style>

    <style name="WindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MaterialButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="cornerRadius">15dp</item>
        <item name="rippleColor">?rippleColor</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:background">?android:attr/colorPrimary</item>
    </style>

    <style name="DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:background">@color/white</item>
        <item name="color">@color/white</item>

    </style>

    <style name="SnackBarStyle" parent="Widget.Design.Snackbar">
        <item name="backgroundTint">?android:attr/colorPrimary</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">

        <item name="android:colorBackground">?android:attr/colorPrimaryDark</item>
        <item name="background">@drawable/dialog_rounded_corners</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="color">?android:attr/colorPrimary</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/white</item>
    </style>

</resources>