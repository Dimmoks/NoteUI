        <item name="android:textColorSecondary">@color/BlueTheme_textColorSecondary</item>
        <item name="actionModeBackground">@color/BlueTheme_colorPrimary</item>
        <!--  white color for back arrow  -->
        <item name="colorControlNormal">@color/white</item>
        <!--  This color are used for Material Action Mode background  -->
        <item name="colorSurface">@color/BlueTheme_colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

