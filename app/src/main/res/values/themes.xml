<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="colorButton" format="color" />

    <style name="BaseTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="editTextStyle">@style/EditText</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="alertDialogTheme">@style/MaterialAlertDialog</item>
        <item name="drawerArrowStyle">@style/DrawerArrowToggle</item>
        <item name="snackbarStyle">@style/SnackBarStyle</item>
        <item name="switchStyle">@style/Switch</item>

    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="BlueTheme" parent="BaseTheme">

        <item name="android:colorBackground">@color/BlueTheme_colorBackground</item>
        <item name="colorPrimary">@color/BlueTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/BlueTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/BlueTheme_colorAccent</item>
        <item name="android:statusBarColor">@color/BlueTheme_colorPrimary</item>
        <item name="android:navigationBarColor">@color/BlueTheme_colorPrimary</item>
        <item name="android:textColorSecondary">@color/BlueTheme_textColorSecondary</item>
        <item name="actionModeBackground">@color/BlueTheme_colorPrimary</item>
        <!--  white color for back arrow  -->
        <item name="colorControlNormal">@color/white</item>
        <!--  This color are used for Material Action Mode background  -->
        <item name="colorSurface">@color/BlueTheme_colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorButton">@color/BlueTheme_ButtonColor</item>

    </style>

    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="color">?colorButton</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerSize">15dp</item>

    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:background">?android:attr/colorPrimary</item>
    </style>

    <style name="DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:background">@color/white</item>
        <item name="color">@color/white</item>

    </style>

    <style name="SnackBarStyle" parent="Widget.Design.Snackbar">
        <item name="backgroundTint">?android:attr/colorPrimary</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        
        <item name="android:colorBackground">?android:attr/colorPrimaryDark</item>
        <item name="background">@drawable/alert_dialog_background</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="color">?android:attr/colorPrimary</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="cornerRadius">10dp</item>
    </style>
    
    <style name="Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/white</item>
    </style>

</resources>