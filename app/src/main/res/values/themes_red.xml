<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="RedTheme" parent="Theme.Material3.Dark">

        <item name="android:colorBackground">@color/RedTheme_Background</item>
        <item name="colorPrimary">@color/RedTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/RedTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/RedTheme_colorAccent</item>
        <item name="android:statusBarColor">@color/RedTheme_colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/RedTheme_textColorSecondary</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:navigationBarColor">@color/RedTheme_colorPrimary</item>
        <!--  white color for back arrow  -->
        <item name="colorControlNormal">@color/white</item>
        <!--  This color is used for Material Action Mode background  -->
        <item name="colorSurface">@color/RedTheme_colorPrimary</item>
